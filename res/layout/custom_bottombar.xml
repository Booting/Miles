<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:orientation="horizontal"
	    android:weightSum="5"
	    android:background="#f7f7f5">
	    <RelativeLayout android:id="@+id/bottomBarA"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1">
	        <ImageView android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:src="@drawable/bottom_a"
	            android:padding="10dp" />
	        <View android:id="@+id/viewBarA"
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:background="#48d1b6"
        		android:layout_alignParentBottom="true"/>
	    </RelativeLayout>
	    <RelativeLayout android:id="@+id/bottomBarB"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1">
	        <ImageView android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:src="@drawable/bottom_b"
	            android:padding="10dp" />
	        <TextView android:id="@+id/txtCountB"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:textColor="#FFF"
	            android:textSize="11sp"
	            android:text="20"
            	android:background="@drawable/custom_circle"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />
	        <View android:id="@+id/viewBarB"
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:background="#48d1b6"
        		android:layout_alignParentBottom="true"
        		android:visibility="gone" />
	    </RelativeLayout>
	    <RelativeLayout android:id="@+id/bottomBarC"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1">
	        <ImageView android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:src="@drawable/bottom_c"
	            android:padding="10dp" />
	        <View android:id="@+id/viewBarC"
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:background="#48d1b6"
        		android:layout_alignParentBottom="true"
        		android:visibility="gone" />
	    </RelativeLayout>
	    <RelativeLayout android:id="@+id/bottomBarD"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1">
	        <ImageView android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:src="@drawable/bottom_d"
	            android:padding="10dp" />
	        <TextView android:id="@+id/txtCountD"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:textColor="#FFF"
	            android:textSize="11sp"
	            android:text="5"
            	android:background="@drawable/custom_circle"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />
	        <View android:id="@+id/viewBarD"
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:background="#48d1b6"
        		android:layout_alignParentBottom="true"
        		android:visibility="gone" />
	    </RelativeLayout>
	    <RelativeLayout android:id="@+id/bottomBarE"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1">
	        <ImageView android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:src="@drawable/bottom_e"
	            android:padding="10dp" />
	        <View android:id="@+id/viewBarE"
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:background="#48d1b6"
        		android:layout_alignParentBottom="true"
        		android:visibility="gone" />
	    </RelativeLayout>
	</LinearLayout>
	
	<View android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#efefef" />
	
</RelativeLayout>