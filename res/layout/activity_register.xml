<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@drawable/register"
	android:animateLayoutChanges="true" >
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:animateLayoutChanges="true" >
	    <ImageView android:layout_width="fill_parent"
	        android:layout_height="200dp"
	        android:src="@drawable/logo"
	        android:scaleType="centerCrop"
	        android:contentDescription="@string/app_name"
	        android:layout_marginTop="20dip" />
	    
	    <LinearLayout android:id="@+id/linEmailPassword"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="20dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:padding="20dp"
	        android:background="@drawable/custom_shape"
	        android:animateLayoutChanges="true">
	        <!-- EMAIL -->
	        <EditText android:id="@+id/txtEmail"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:hint="E-mail"
			    android:inputType="textEmailAddress"
			    android:textSize="14sp"
			    android:layout_gravity="center_vertical"
			    android:background="#0000"
			    android:singleLine="true"
			    android:textColor="#868788"
			    android:textColorHint="#868788" />
		    <View android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="#868788"
		        android:layout_marginTop="5dp" />
		    
	        <!-- PASSWORD -->
	        <EditText android:id="@+id/txtPassword"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:hint="Password"
			    android:inputType="textPassword"
			    android:textSize="14sp"
			    android:layout_gravity="center_vertical"
			    android:background="#0000"
			    android:singleLine="true"
			    android:textColor="#868788"
			    android:textColorHint="#868788"
			    android:layout_marginTop="20dp" />
		    <View android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="#868788"
		        android:layout_marginTop="5dp" />
		    
	        <!-- CONFIRM PASSWORD -->
	        <EditText android:id="@+id/txtConfirmPassword"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:hint="Confirm Password"
			    android:inputType="textPassword"
			    android:textSize="14sp"
			    android:layout_gravity="center_vertical"
			    android:background="#0000"
			    android:singleLine="true"
			    android:textColor="#868788"
			    android:textColorHint="#868788"
			    android:layout_marginTop="20dp" />
		    <View android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="#868788"
		        android:layout_marginTop="5dp"
			    android:layout_marginBottom="10dp" />
	    </LinearLayout>
	    
	    <LinearLayout android:id="@+id/linBiodata"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="20dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:padding="20dp"
	        android:background="@drawable/custom_shape"
	        android:animateLayoutChanges="true"
	        android:visibility="gone">
	        <!-- FIRST NAME -->
	        <EditText android:id="@+id/txtFirstName"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:hint="First Name"
			    android:textSize="14sp"
			    android:layout_gravity="center_vertical"
			    android:background="#0000"
			    android:singleLine="true"
			    android:textColor="#868788"
			    android:textColorHint="#868788" />
		    <View android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="#868788"
		        android:layout_marginTop="5dp" />
		    
	        <!-- LAST NAME -->
	        <EditText android:id="@+id/txtLastName"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:hint="Last Name"
			    android:textSize="14sp"
			    android:layout_gravity="center_vertical"
			    android:background="#0000"
			    android:singleLine="true"
			    android:textColor="#868788"
			    android:textColorHint="#868788"
			    android:layout_marginTop="20dp" />
		    <View android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="#868788"
		        android:layout_marginTop="5dp" />
		    
	        <!-- PHONE -->
	        <EditText android:id="@+id/txtPhone"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:hint="Phone"
			    android:inputType="number"
			    android:textSize="14sp"
			    android:layout_gravity="center_vertical"
			    android:background="#0000"
			    android:singleLine="true"
			    android:textColor="#868788"
			    android:textColorHint="#868788"
			    android:layout_marginTop="20dp" />
		    <View android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="#868788"
		        android:layout_marginTop="5dp"
			    android:layout_marginBottom="10dp" />
		    
		    <!-- DATE OF BIRTH -->
	        <Button android:id="@+id/txtDateOfBirth"
	            android:layout_width="fill_parent"
		        android:layout_height="20dp"
			    android:hint="Date of Birth"
			    android:textSize="14sp"
			    android:background="#0000"
			    android:singleLine="true"
			    android:textColor="#868788"
			    android:textColorHint="#868788"
			    android:layout_gravity="center_vertical"
			    android:gravity="left"
			    android:layout_marginTop="10dp" />
		    <View android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="#868788"
		        android:layout_marginTop="3dp"
			    android:layout_marginBottom="10dp" />
		    
		    <!-- GENDER -->
	        <TextView android:id="@+id/txtGender"
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:text="Gender"
			    android:textSize="14sp"
			    android:layout_gravity="center_vertical"
			    android:background="#0000"
			    android:singleLine="true"
			    android:textColor="#868788"
			    android:layout_marginTop="10dp" />
	        <RadioGroup android:id="@+id/radioSex"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
			    android:layout_marginBottom="10dp"
			    android:orientation="horizontal" >
		        <RadioButton android:id="@+id/radioMale"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="MALE" 
			    	android:textSize="14sp"
				    android:textColor="#868788"
		            android:checked="true"
		            android:layout_marginRight="20dp" />
		        <RadioButton android:id="@+id/radioFemale"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="FEMALE"
			    	android:textSize="14sp"
				    android:textColor="#868788" />
		    </RadioGroup>
	    </LinearLayout>
	    
	    <LinearLayout android:id="@+id/linAvatar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:animateLayoutChanges="true"
	        android:visibility="gone">
	        <com.miles.referensi.CircleImageView
			    xmlns:app="http://schemas.android.com/apk/res-auto"
			    android:id="@+id/imgProfile"
			    android:layout_width="150dp"
			    android:layout_height="150dp"
			    android:src="@drawable/upload_avatar"
			    app:civ_border_width="1dp"
			    app:civ_border_color="#000"
		        android:layout_gravity="center"
		        android:onClick="loadImagefromGallery" />
	        <Button android:id="@+id/btnUploadPhoto"
		        style="@style/btnStyleRegister"
		        android:layout_marginTop="25dp"
		        android:text="Upload Photo"
		        android:animateLayoutChanges="true" />
	        <TextView android:id="@+id/txtOr"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:text="or"
			    android:textSize="13sp"
			    android:gravity="center_horizontal"
			    android:singleLine="true"
			    android:textColor="#000"
		        android:layout_marginTop="10dp"
				android:animateLayoutChanges="true" />
	    </LinearLayout>
	    
	    <Button android:id="@+id/btnRegister"
	        style="@style/btnStyleRegister"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:text="Next"
	        android:animateLayoutChanges="true" />
	    
	    <!-- SIGN IN -->
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="20dip"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal">
		    <TextView android:id="@+id/txtSignInOne"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
			    android:text="Have an account?"
			    android:textSize="13sp"
			    android:gravity="center_horizontal"
			    android:singleLine="true"
			    android:textColor="#000" />
		    <TextView android:id="@+id/txtSignInTwo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
			    android:text="Log In"
			    android:textSize="13sp"
			    android:gravity="center_horizontal"
			    android:singleLine="true"
			    android:textColor="#000"
			    android:layout_marginLeft="5dip" />
	    </LinearLayout>
	</LinearLayout>
</ScrollView>